<!DOCTYPE html>
<html lang="sr" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skener Signala - DTrade Scalper</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        slate: {
                            850: '#1e293b',
                            950: '#020617'
                        }
                    }
                }
            }
        }
    </script>
    <style>
        @keyframes pulse-glow {
            0%, 100% { opacity: 1; box-shadow: 0 0 20px rgba(34, 197, 94, 0.5); }
            50% { opacity: 0.7; box-shadow: 0 0 40px rgba(34, 197, 94, 0.8); }
        }
        .signal-ARM {
            animation: pulse-glow 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
        .signal-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.375rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        .signal-ARM {
            background: rgba(34, 197, 94, 0.2);
            color: rgb(34, 197, 94);
            border: 1px solid rgba(34, 197, 94, 0.4);
        }
        .signal-WATCH {
            background: rgba(234, 179, 8, 0.2);
            color: rgb(234, 179, 8);
            border: 1px solid rgba(234, 179, 8, 0.4);
        }
        .signal-NONE {
            background: rgba(100, 116, 139, 0.2);
            color: rgb(100, 116, 139);
            border: 1px solid rgba(100, 116, 139, 0.4);
        }
        .tier-badge {
            font-size: 0.65rem;
            padding: 0.125rem 0.5rem;
            border-radius: 9999px;
            font-weight: 600;
        }
        .tier-PRIME {
            background: rgba(168, 85, 247, 0.2);
            color: rgb(168, 85, 247);
        }
        .tier-NORMAL {
            background: rgba(59, 130, 246, 0.2);
            color: rgb(59, 130, 246);
        }
        .tier-WILD {
            background: rgba(239, 68, 68, 0.2);
            color: rgb(239, 68, 68);
        }
    </style>
</head>
<body class="bg-slate-950 text-slate-100 min-h-screen">

    <!-- Header -->
    <header class="bg-slate-900 border-b border-slate-800 sticky top-0 z-50">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-green-400 to-emerald-400 bg-clip-text text-transparent">
                        üéØ Skener Signala
                    </h1>
                    <div id="lastUpdate" class="text-xs text-slate-400">
                        Uƒçitavanje...
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <div class="flex items-center gap-2 text-sm">
                        <span class="text-slate-400">Status:</span>
                        <span id="connectionStatus" class="text-green-400 font-medium">‚óè Povezan</span>
                    </div>
                    <a href="/regime-monitor" class="px-4 py-2 bg-slate-800 hover:bg-slate-700 rounded-lg text-sm font-medium transition">
                        Re≈æim Monitor ‚Üí
                    </a>
                    <a href="/monitor-micro" class="px-4 py-2 bg-slate-800 hover:bg-slate-700 rounded-lg text-sm font-medium transition">
                        Mikrostruktura ‚Üí
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main class="px-6 py-6 space-y-6">

        <!-- Stats Cards -->
        <section class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="rounded-lg border border-green-800 bg-green-900/20 p-4">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-xs font-medium text-green-400 uppercase">üü¢ ARM Signali</span>
                </div>
                <div id="armCount" class="text-3xl font-bold text-green-400">0</div>
                <div class="text-xs text-slate-500 mt-1">Spremni za trgovanje</div>
            </div>
            <div class="rounded-lg border border-yellow-800 bg-yellow-900/20 p-4">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-xs font-medium text-yellow-400 uppercase">üü° WATCH Signali</span>
                </div>
                <div id="watchCount" class="text-3xl font-bold text-yellow-400">0</div>
                <div class="text-xs text-slate-500 mt-1">Pod nadzorom</div>
            </div>
            <div class="rounded-lg border border-slate-800 bg-slate-900/40 p-4">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-xs font-medium text-slate-400 uppercase">‚ö´ NONE</span>
                </div>
                <div id="noneCount" class="text-3xl font-bold text-slate-400">0</div>
                <div class="text-xs text-slate-500 mt-1">Bez signala</div>
            </div>
            <div class="rounded-lg border border-slate-800 bg-slate-900/40 p-4">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-xs font-medium text-slate-400 uppercase">üìä Ukupno</span>
                </div>
                <div id="totalSymbols" class="text-3xl font-bold text-slate-200">0</div>
                <div class="text-xs text-slate-500 mt-1">Simbola u skeneru</div>
            </div>
        </section>

        <!-- Filters -->
        <section class="rounded-xl border border-slate-800 bg-slate-900/60 p-4">
            <div class="flex items-center gap-4 flex-wrap">
                <div>
                    <label class="block text-xs text-slate-400 mb-1">Strana</label>
                    <select id="filterSide" class="px-3 py-1.5 bg-slate-800 border border-slate-700 rounded-lg text-sm text-slate-200">
                        <option value="BOTH">Obe</option>
                        <option value="LONG">LONG</option>
                        <option value="SHORT">SHORT</option>
                    </select>
                </div>
                <div>
                    <label class="block text-xs text-slate-400 mb-1">Minimalni Skor: <span id="minScoreValue" class="text-purple-400 font-semibold">25</span></label>
                    <input type="range" id="filterMinScore" value="25" min="10" max="60" step="5" class="w-32 h-2 bg-slate-700 rounded-lg appearance-none cursor-pointer accent-purple-600">
                </div>
                <div>
                    <label class="block text-xs text-slate-400 mb-1">Limit</label>
                    <input type="number" id="filterLimit" value="20" min="5" max="50" step="5" class="px-3 py-1.5 w-20 bg-slate-800 border border-slate-700 rounded-lg text-sm text-slate-200">
                </div>
                <div class="flex items-center gap-2">
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input type="checkbox" id="filterIgnoreRegime" checked class="w-4 h-4 rounded bg-slate-700 border-slate-600 text-purple-600 focus:ring-purple-500">
                        <span class="text-xs text-slate-300">Ignori≈°i PANIC re≈æim</span>
                    </label>
                </div>
                <div class="flex items-end">
                    <button id="applyFilters" class="px-4 py-1.5 bg-purple-600 hover:bg-purple-700 rounded-lg text-sm font-medium transition">
                        Primeni
                    </button>
                </div>
                <div class="ml-auto flex items-end gap-2">
                    <span class="text-xs text-slate-500">Auto-refresh:</span>
                    <span class="text-xs font-mono text-green-400">2s</span>
                </div>
            </div>
        </section>

        <!-- Hotlist Table -->
        <section class="rounded-xl border border-slate-800 bg-slate-900/60 p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-slate-200">üî• Top Kandidati</h2>
                <div id="hotlistCount" class="text-sm text-slate-400">
                    Prikazano: 0
                </div>
            </div>

            <div class="overflow-x-auto border border-slate-800 rounded-lg">
                <table class="w-full text-sm">
                    <thead class="border-b border-slate-800 bg-slate-900">
                        <tr class="text-left">
                            <th class="py-3 px-4 text-xs font-medium text-slate-400 uppercase">Simbol</th>
                            <th class="py-3 px-4 text-xs font-medium text-slate-400 uppercase">Strana</th>
                            <th class="py-3 px-4 text-xs font-medium text-slate-400 uppercase">Skor</th>
                            <th class="py-3 px-4 text-xs font-medium text-slate-400 uppercase">Signal</th>
                            <th class="py-3 px-4 text-xs font-medium text-slate-400 uppercase">Tier</th>
                            <th class="py-3 px-4 text-xs font-medium text-slate-400 uppercase">Fee Edge</th>
                            <th class="py-3 px-4 text-xs font-medium text-slate-400 uppercase">Pump Risk</th>
                            <th class="py-3 px-4 text-xs font-medium text-slate-400 uppercase">Spoof</th>
                            <th class="py-3 px-4 text-xs font-medium text-slate-400 uppercase">Volatility</th>
                        </tr>
                    </thead>
                    <tbody id="hotlistTable" class="divide-y divide-slate-800">
                        <tr>
                            <td colspan="9" class="py-8 text-center text-slate-500">
                                Uƒçitavanje hotliste...
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

    </main>

    <script>
        // ================================================================
        // STATE
        // ================================================================
        let updateCounter = 0;
        let hotlistData = [];

        // ================================================================
        // DATA FETCHING
        // ================================================================

        async function fetchHotlist() {
            try {
                const side = document.getElementById('filterSide').value;
                const minScore = document.getElementById('filterMinScore').value;
                const limit = document.getElementById('filterLimit').value;
                const ignoreRegime = document.getElementById('filterIgnoreRegime').checked;

                const response = await fetch(`/api/scanner/hotlist?side=${side}&minScore=${minScore}&limit=${limit}&ignoreGlobalRegime=${ignoreRegime}`);
                const data = await response.json();

                if (data.ok) {
                    hotlistData = data.hotlist;
                    renderHotlist();
                    updateStats();

                    updateCounter++;
                    document.getElementById('lastUpdate').textContent = `Poslednje a≈æuriranje: ${new Date().toLocaleTimeString('sr-RS')}`;
                }
            } catch (error) {
                console.error('Failed to fetch hotlist:', error);
                document.getElementById('connectionStatus').innerHTML = '‚óè <span class="text-red-400">Prekinuto</span>';
            }
        }

        async function fetchStats() {
            try {
                const response = await fetch('/api/scoring/stats');
                const data = await response.json();

                if (data.ok) {
                    const stats = data.stats;
                    document.getElementById('armCount').textContent = stats.signalCounts.ARM_LONG + stats.signalCounts.ARM_SHORT;
                    document.getElementById('watchCount').textContent = stats.signalCounts.WATCH_LONG + stats.signalCounts.WATCH_SHORT;
                    document.getElementById('noneCount').textContent = stats.signalCounts.NONE;
                    document.getElementById('totalSymbols').textContent = stats.totalSymbols;
                }
            } catch (error) {
                console.error('Failed to fetch stats:', error);
            }
        }

        // ================================================================
        // UI RENDERING
        // ================================================================

        function renderHotlist() {
            const tbody = document.getElementById('hotlistTable');

            if (hotlistData.length === 0) {
                tbody.innerHTML = '<tr><td colspan="9" class="py-8 text-center text-slate-500">Nema kandidata koji ispunjavaju kriterijume</td></tr>';
                document.getElementById('hotlistCount').textContent = 'Prikazano: 0';
                return;
            }

            tbody.innerHTML = hotlistData.map(item => {
                const scoreColor = item.finalScore >= 75 ? 'text-green-400' : 'text-yellow-400';
                const sideColor = item.side === 'LONG' ? 'text-green-400' : 'text-red-400';
                const signalClass = `signal-badge signal-${item.signal}`;

                return `
                    <tr class="hover:bg-slate-800/50 transition">
                        <td class="py-3 px-4 font-mono font-bold text-slate-200">${item.symbol}</td>
                        <td class="py-3 px-4 font-mono font-bold ${sideColor}">${item.side}</td>
                        <td class="py-3 px-4 font-mono text-lg font-bold ${scoreColor}">${item.finalScore.toFixed(1)}</td>
                        <td class="py-3 px-4">
                            <span class="${signalClass}">
                                ${item.signal === 'ARM' ? 'üü¢' : item.signal === 'WATCH' ? 'üü°' : '‚ö´'} ${item.signal}
                            </span>
                        </td>
                        <td class="py-3 px-4">
                            <span class="tier-badge tier-${item.tier}">${item.tier}</span>
                        </td>
                        <td class="py-3 px-4 font-mono text-xs ${item.feeEdge >= 70 ? 'text-green-400 font-bold' : 'text-slate-400'}">${item.feeEdge.toFixed(1)}</td>
                        <td class="py-3 px-4 font-mono text-xs ${item.pumpRisk >= 50 ? 'text-orange-400 font-bold' : 'text-slate-400'}">${item.pumpRisk.toFixed(1)}</td>
                        <td class="py-3 px-4 font-mono text-xs ${item.spoofingLevel >= 60 ? 'text-purple-400 font-bold' : 'text-slate-400'}">${item.spoofingLevel.toFixed(1)}</td>
                        <td class="py-3 px-4 font-mono text-xs ${item.volatility >= 70 ? 'text-red-400 font-bold' : 'text-slate-400'}">${item.volatility.toFixed(1)}</td>
                    </tr>
                `;
            }).join('');

            document.getElementById('hotlistCount').textContent = `Prikazano: ${hotlistData.length}`;
        }

        function updateStats() {
            // Stats are fetched separately
            fetchStats();
        }

        // ================================================================
        // EVENT LISTENERS
        // ================================================================

        // Range slider live update
        document.getElementById('filterMinScore').addEventListener('input', (e) => {
            document.getElementById('minScoreValue').textContent = e.target.value;
        });

        document.getElementById('applyFilters').addEventListener('click', fetchHotlist);

        // ================================================================
        // INITIALIZATION
        // ================================================================

        // Initial fetch
        fetchHotlist();
        fetchStats();

        // Polling interval (2 seconds)
        setInterval(() => {
            fetchHotlist();
            fetchStats();
        }, 2000);

        console.log('üéØ Scanner Dashboard initialized');
    </script>

</body>
</html>
