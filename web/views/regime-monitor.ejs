                <div id="wildTierCount" class="text-2xl font-bold text-orange-400">0</div>
                <div class="text-xs text-slate-500 mt-1">High volatility</div>
            </div>
        </section>

        <!-- Symbol Regimes Table -->
        <section class="rounded-xl border border-slate-800 bg-slate-900/60 p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-slate-200">Symbol Regimes</h2>
                <div class="flex items-center gap-2">
                    <input
                        type="text"
