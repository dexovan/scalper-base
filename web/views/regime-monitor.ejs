                            <span id="symbolsPUMP" class="font-mono text-orange-400">0</span>
                        </div>
                        <div class="flex items-center justify-between text-xs">
                            <span class="text-slate-500">MANIPULATED</span>
                            <span id="symbolsMANIPULATED" class="font-mono text-purple-400">0</span>
                        </div>
                        <div class="flex items-center justify-between text-xs">
                            <span class="text-slate-500">COOLDOWN</span>
                            <span id="symbolsCOOLDOWN" class="font-mono text-slate-400">0</span>
                        </div>
                        <div class="flex items-center justify-between text-xs">
                            <span class="text-slate-500">STALE</span>
                            <span id="symbolsSTALE" class="font-mono text-slate-500">0</span>
                        </div>
                        <div class="flex items-center justify-between text-xs">
                            <span class="text-slate-500">NORMAL</span>
                            <span id="symbolsNORMAL" class="font-mono text-green-400">0</span>
                        </div>
                    </div>
                </div>
            </div>

        </section>

        <!-- Tier Statistics -->
        <section class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="rounded-lg border border-slate-800 bg-slate-900/40 p-4">
