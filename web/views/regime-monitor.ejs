    </main>

    <script>
        // ================================================================
        // STATE
        // ================================================================
        let updateCounter = 0;
        let symbolRegimesData = [];

        // ================================================================
        // UTILITY FUNCTIONS
        // ================================================================

        function getRegimeBadgeHTML(regime) {
            const badgeClass = `regime-badge regime-${regime}`;
            const icon = {
                'PANIC': 'üö®',
                'RISK_OFF': '‚ö†Ô∏è',
                'NORMAL': '‚úÖ',
                'PUMP': 'üöÄ',
                'MANIPULATED': 'üé≠',
                'NEWS_DRIVEN': 'üì∞',
                'COOLDOWN': '‚ùÑÔ∏è',
                'STALE': 'üí§'
            };
            return `<span class="${badgeClass}">${icon[regime] || '‚Ä¢'} ${regime}</span>`;
        }

        function formatTimestamp(isoString) {
            if (!isoString) return '--:--:--';
            const date = new Date(isoString);
            return date.toLocaleTimeString('en-US', { hour12: false });
        }

        function formatRelativeTime(isoString) {
            if (!isoString) return 'Never';
            const seconds = Math.floor((Date.now() - new Date(isoString)) / 1000);
            if (seconds < 60) return `${seconds}s ago`;
            if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
            return `${Math.floor(seconds / 3600)}h ago`;
        }

        // ================================================================
        // DATA FETCHING
        // ================================================================

        async function fetchRegimeOverview() {
            try {
                const response = await fetch('/api/regime/overview');
                const data = await response.json();

                if (data.ok) {
                    updateGlobalRegime(data.overview.global);
                    updateSymbolStats(data.overview.symbols);
                    updateTierStats(data.overview.tiers);
                    updateCounter++;
                    document.getElementById('updateCounter').textContent = `Updates: ${updateCounter}`;
                    document.getElementById('lastUpdate').textContent = `Last update: ${formatTimestamp(new Date().toISOString())}`;
                }
            } catch (error) {
                console.error('Failed to fetch regime overview:', error);
                document.getElementById('connectionStatus').innerHTML = '‚óè <span class="text-red-400">Disconnected</span>';
            }
        }

        async function fetchSymbolRegimes() {
            try {
                const response = await fetch('/api/features/overview');
                const data = await response.json();

                if (data.ok) {
                    // Get regime data for each symbol
                    const regimesPromises = data.symbols.slice(0, 100).map(async (symbol) => {
                        try {
                            const regimeResp = await fetch(`/api/regime/${symbol.symbol}`);
                            const regimeData = await regimeResp.json();

                            return {
                                symbol: symbol.symbol,
                                regime: regimeData.ok ? regimeData.regime : null,
                                features: {
                                    pumpScore: symbol.pumpLikelihood || 0,
                                    spoofScore: symbol.spoofingScore || 0,
                                    volatility: symbol.volatilityScore || 0
                                }
                            };
                        } catch (err) {
                            return {
                                symbol: symbol.symbol,
                                regime: null,
                                features: {
                                    pumpScore: symbol.pumpLikelihood || 0,
                                    spoofScore: symbol.spoofingScore || 0,
                                    volatility: symbol.volatilityScore || 0
                                }
                            };
                        }
                    });

                    symbolRegimesData = await Promise.all(regimesPromises);
                    renderSymbolTable();
                }
            } catch (error) {
                console.error('Failed to fetch symbol regimes:', error);
            }
        }

        // ================================================================
        // UI UPDATE FUNCTIONS
        // ================================================================

        function updateGlobalRegime(global) {
            const regimeEl = document.getElementById('globalRegime');
            const riskLevelEl = document.getElementById('globalRiskLevel');
            const timestampEl = document.getElementById('globalTimestamp');
            const allowNewEl = document.getElementById('allowNewPositions');
            const forceCloseEl = document.getElementById('forceClosePositions');
            const btcVolEl = document.getElementById('btcVolatility');
            const ethVolEl = document.getElementById('ethVolatility');

            // Update regime badge
            const icon = {
                'PANIC': 'üö®',
                'RISK_OFF': '‚ö†Ô∏è',
                'NORMAL': '‚úÖ'
            };
            regimeEl.className = `regime-badge regime-${global.regime} ${global.regime === 'PANIC' ? 'pulse-danger' : ''}`;
            regimeEl.innerHTML = `<span class="status-dot status-${global.riskLevel}"></span> ${icon[global.regime]} ${global.regime}`;

            // Update risk level
            const riskColors = {
                'EXTREME': 'text-red-400',
                'HIGH': 'text-yellow-400',
                'MEDIUM': 'text-blue-400',
                'LOW': 'text-green-400'
            };
            riskLevelEl.innerHTML = `Risk Level: <span class="font-medium ${riskColors[global.riskLevel]}">${global.riskLevel}</span>`;

            // Update timestamp
            timestampEl.textContent = `Updated: ${formatTimestamp(global.updatedAt)}`;

            // Update permissions
            allowNewEl.textContent = global.allowNewPositions ? '‚úÖ' : '‚ùå';
            forceCloseEl.textContent = global.forceClosePositions ? '‚ö†Ô∏è' : '‚ùå';

            // Update BTC/ETH volatility
            btcVolEl.textContent = global.btcVolatility.toFixed(3);
            ethVolEl.textContent = global.ethVolatility.toFixed(3);

            // Color volatility based on value
            btcVolEl.className = global.btcVolatility >= 0.75 ? 'text-lg font-mono font-bold text-red-400' : 'text-lg font-mono font-bold text-yellow-400';
            ethVolEl.className = global.ethVolatility >= 0.70 ? 'text-lg font-mono font-bold text-red-400' : 'text-lg font-mono font-bold text-yellow-400';
        }

        function updateSymbolStats(symbols) {
            document.getElementById('totalSymbols').textContent = symbols.total;
            document.getElementById('tradeableSymbols').textContent = symbols.tradeable;
            document.getElementById('blockedSymbols').textContent = symbols.blocked;

            document.getElementById('symbolsPUMP').textContent = symbols.byRegime.PUMP || 0;
            document.getElementById('symbolsMANIPULATED').textContent = symbols.byRegime.MANIPULATED || 0;
            document.getElementById('symbolsCOOLDOWN').textContent = symbols.byRegime.COOLDOWN || 0;
            document.getElementById('symbolsSTALE').textContent = symbols.byRegime.STALE || 0;
            document.getElementById('symbolsNORMAL').textContent = symbols.byRegime.NORMAL || 0;
        }

        function updateTierStats(tiers) {
            document.getElementById('primeTierCount').textContent = tiers.prime;
            document.getElementById('normalTierCount').textContent = tiers.normal;
            document.getElementById('wildTierCount').textContent = tiers.wild;
        }

        function renderSymbolTable() {
            const tbody = document.getElementById('symbolRegimesTable');
            const searchTerm = document.getElementById('searchSymbol').value.toUpperCase();
            const filterRegime = document.getElementById('filterRegime').value;

            let filtered = symbolRegimesData.filter(item => {
                const matchesSearch = item.symbol.includes(searchTerm);
                const matchesRegime = filterRegime === 'all' || item.regime?.current === filterRegime;
                return matchesSearch && matchesRegime;
            });

            if (filtered.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="py-8 text-center text-slate-500">No symbols found</td></tr>';
                document.getElementById('tableInfo').textContent = 'Showing 0 symbols';
                return;
            }

            tbody.innerHTML = filtered.map(item => {
                const regime = item.regime;
                const features = item.features;

                if (!regime) {
                    return `
                        <tr class="hover:bg-slate-800/50 transition">
                            <td class="py-2 px-2 font-mono font-medium text-slate-200">${item.symbol}</td>
                            <td colspan="7" class="py-2 px-2 text-slate-500 text-xs">No regime data</td>
                        </tr>
                    `;
                }

                return `
                    <tr class="hover:bg-slate-800/50 transition">
                        <td class="py-2 px-2 font-mono font-medium text-slate-200">${item.symbol}</td>
                        <td class="py-2 px-2">${getRegimeBadgeHTML(regime.current)}</td>
                        <td class="py-2 px-2 text-center text-lg">${regime.allowLong ? '‚úÖ' : '‚ùå'}</td>
                        <td class="py-2 px-2 text-center text-lg">${regime.allowShort ? '‚úÖ' : '‚ùå'}</td>
                        <td class="py-2 px-2 font-mono text-xs ${features.pumpScore >= 0.70 ? 'text-orange-400 font-bold' : 'text-slate-400'}">${features.pumpScore.toFixed(3)}</td>
                        <td class="py-2 px-2 font-mono text-xs ${features.spoofScore >= 0.72 ? 'text-purple-400 font-bold' : 'text-slate-400'}">${features.spoofScore.toFixed(3)}</td>
                        <td class="py-2 px-2 font-mono text-xs ${features.volatility >= 0.75 ? 'text-red-400 font-bold' : 'text-slate-400'}">${features.volatility.toFixed(3)}</td>
                        <td class="py-2 px-2 text-xs text-slate-500">${formatRelativeTime(regime.updatedAt)}</td>
                    </tr>
                `;
            }).join('');

            document.getElementById('tableInfo').textContent = `Showing ${filtered.length} symbols`;
        }

        // ================================================================
        // TRADE PERMISSION CHECKER
        // ================================================================

        async function checkTrade() {
            const symbol = document.getElementById('checkSymbol').value.toUpperCase();
            const side = document.getElementById('checkSide').value;
            const resultDiv = document.getElementById('tradeCheckResult');

            if (!symbol) {
                resultDiv.innerHTML = '<div class="p-4 bg-red-900/20 border border-red-800 rounded-lg text-red-400 text-sm">Please enter a symbol</div>';
                resultDiv.classList.remove('hidden');
                return;
            }

            try {
                const response = await fetch('/api/regime/check-trade', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ symbol, side })
                });

                const data = await response.json();

                if (data.ok) {
                    const allowed = data.allowed;
                    const bgColor = allowed ? 'bg-green-900/20 border-green-800' : 'bg-red-900/20 border-red-800';
                    const textColor = allowed ? 'text-green-400' : 'text-red-400';
                    const icon = allowed ? '‚úÖ' : '‚ùå';

                    resultDiv.innerHTML = `
