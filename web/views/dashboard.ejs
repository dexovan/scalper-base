        document.getElementById('microstructure-modal').classList.add('hidden');
        document.body.style.overflow = 'auto';
    };

    // Close modal on ESC key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            hideMicrostructureInfo();
        }
    });

    // Close modal on backdrop click
    document.getElementById('microstructure-modal')?.addEventListener('click', (e) => {
        if (e.target.id === 'microstructure-modal') {
            hideMicrostructureInfo();
        }
    });

    // Make refresh function globally available
    window.refreshFeatureData = function() {
        if (globalDashboard && typeof globalDashboard.updateFeatureEngineStats === 'function') {
            globalDashboard.updateFeatureEngineStats();
        }
    };

    document.addEventListener('DOMContentLoaded', () => {
        console.log('‚úÖ Dashboard loading...');

        const dashboard = new DashboardAPI();
        globalDashboard = dashboard;

        dashboard.start();

        // Load regime preview data
        loadRegimePreview();
        setInterval(loadRegimePreview, 5000); // Update every 5s

        console.log('‚úÖ Dashboard initialized');
    });

    // Regime preview loader
    async function loadRegimePreview() {
        try {
            const response = await fetch('http://localhost:8090/api/regime/overview');
            const data = await response.json();

            if (data.ok) {
                const global = data.overview.global;
                const symbols = data.overview.symbols;

                // Update global regime
                const globalEl = document.getElementById('regime-global-preview');
                if (globalEl) {
                    globalEl.textContent = global.regime;
                    globalEl.className = 'text-lg font-bold ' +
                        (global.regime === 'PANIC' ? 'text-red-400' :
                         global.regime === 'RISK_OFF' ? 'text-yellow-400' :
                         'text-green-400');
                }

                // Update blocked symbols
                const blockedEl = document.getElementById('regime-blocked-preview');
                if (blockedEl) {
                    blockedEl.textContent = symbols.blocked || 0;
                }

                // Update risk level
                const riskEl = document.getElementById('regime-risk-preview');
                if (riskEl) {
                    riskEl.textContent = global.riskLevel;
                    riskEl.className = 'text-lg font-bold ' +
                        (global.riskLevel === 'EXTREME' ? 'text-red-400' :
                         global.riskLevel === 'HIGH' ? 'text-yellow-400' :
                         global.riskLevel === 'MEDIUM' ? 'text-blue-400' :
                         'text-slate-400');
                }
            }
        } catch (error) {
            console.error('Failed to load regime preview:', error);
        }
    }
</script>

