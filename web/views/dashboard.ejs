<div class="text-center mb-10">
    <h1 class="text-4xl font-bold text-blue-400">Trading Dashboard</h1>
    <p class="text-gray-400 mt-2">AI-powered scalping engine</p>
    <p class="text-gray-500 text-sm mt-2">Last update: <%= currentTime %></p>
</div>

<!-- GRID -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

    <!-- System Status -->
    <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow">
        <h3 class="text-xl font-semibold">System Status</h3>
        <p class="text-green-400 text-3xl font-bold mt-2">Online</p>
    </div>

    <!-- Portfolio -->
    <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow">
        <h3 class="text-xl font-semibold">Portfolio Value</h3>
        <p class="text-blue-400 text-3xl font-bold mt-2">$12,847.50</p>
        <p class="text-green-400 mt-1">+2.45% today</p>
    </div>

    <!-- Active Trades -->
    <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow">
        <h3 class="text-xl font-semibold">Active Trades</h3>
        <p class="text-blue-400 text-3xl font-bold mt-2">7</p>
    </div>

    <!-- Success Rate -->
    <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow">
        <h3 class="text-xl font-semibold">Success Rate</h3>
        <p class="text-blue-400 text-3xl font-bold mt-2">87.3%</p>
    </div>

    <!-- AI Engine -->
    <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow">
        <h3 class="text-xl font-semibold">AI Engine</h3>
        <p class="text-green-400 text-3xl font-bold mt-2">Active</p>
    </div>

    <!-- Alerts -->
    <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 shadow">
        <h3 class="text-xl font-semibold">Alerts</h3>
        <p class="text-blue-400 text-3xl font-bold mt-2">3</p>
    </div>

</div>
