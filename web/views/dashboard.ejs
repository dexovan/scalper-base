<!-- Dashboard Custom Styles -->
<link rel="stylesheet" href="/css/dashboard.css">

<div class="space-y-4">

    <!-- System Status Bar - Compact & Clean -->
    <section class="rounded-lg border border-slate-800 bg-slate-900/80 px-4 py-3">
        <div class="flex flex-wrap items-center justify-between gap-4">
            <div class="flex items-center gap-4">
                <h2 class="text-xl font-bold tracking-tight text-slate-100">DTrade AI Scalper</h2>
                <div class="flex items-center gap-2">
                    <span class="inline-flex items-center gap-1.5 px-2 py-1 rounded-md bg-emerald-500/10 border border-emerald-500/30 text-emerald-300 text-xs font-medium">
                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-400 animate-pulse"></span>
                        Engine Online
                    </span>
                    <span class="inline-flex items-center gap-1.5 px-2 py-1 rounded-md bg-blue-500/10 border border-blue-500/30 text-blue-300 text-xs font-medium" id="ws-status-badge">
                        <span class="w-1.5 h-1.5 rounded-full bg-blue-400"></span>
                        WebSocket OK
                    </span>
                    <span class="inline-flex items-center px-2 py-1 rounded-md bg-slate-800 border border-slate-700 text-slate-300 text-xs font-medium">
                        <span class="font-semibold text-amber-400">SIM</span>
                    </span>
                </div>
            </div>
            <div class="flex items-center gap-4 text-xs text-slate-400">
                <span><%= user || "admin" %></span>
                <span>|</span>
                <span id="dashboard-time">Last updated: <%= currentTime %></span>
                <span>|</span>
                <a href="/logout" class="text-blue-400 hover:text-blue-300">Logout</a>
            </div>
        </div>
    </section>

    <!-- Key Metrics - 3 Cards -->
    <section class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Active Symbols -->
        <div class="rounded-lg border border-slate-800 bg-slate-900/60 p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs font-medium text-slate-400 uppercase tracking-wide">Active Symbols</p>
                    <p class="mt-1 text-3xl font-bold tracking-tight text-slate-100" id="metric-active-symbols">-</p>
                    <p class="mt-1 text-xs text-slate-500" id="metric-symbols-detail">Loading...</p>
                </div>
                <div class="w-12 h-12 rounded-full bg-blue-500/10 flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 12h18M9 6h6M12 3v18"/>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Data Flow Rate -->
        <div class="rounded-lg border border-slate-800 bg-slate-900/60 p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs font-medium text-slate-400 uppercase tracking-wide">Data Flow Rate</p>
                    <p class="mt-1 text-3xl font-bold tracking-tight text-emerald-400" id="metric-data-rate">- evt/s</p>
                    <p class="mt-1 text-xs text-slate-500">Events per second</p>
                </div>
                <div class="w-12 h-12 rounded-full bg-emerald-500/10 flex items-center justify-center">
                    <div class="w-3 h-3 rounded-full bg-emerald-400 animate-pulse"></div>
                </div>
            </div>
        </div>

        <!-- System Uptime -->
        <div class="rounded-lg border border-slate-800 bg-slate-900/60 p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs font-medium text-slate-400 uppercase tracking-wide">System Uptime</p>
                    <p class="mt-1 text-3xl font-bold tracking-tight text-slate-100" id="metric-uptime">-</p>
                    <p class="mt-1 text-xs text-emerald-400" id="metric-health">All systems operational</p>
                </div>
                <div class="w-12 h-12 rounded-full bg-green-500/10 flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 12l2 2 4-4"/>
                        <circle cx="12" cy="12" r="10"/>
                    </svg>
                </div>
            </div>
        </div>
    </section>

    <!-- Prime Markets - Top 6 Only -->
    <section class="rounded-lg border border-slate-800 bg-slate-900/60 p-4">
        <div class="flex items-center justify-between mb-3">
            <h3 class="text-sm font-semibold text-slate-200 uppercase tracking-wide">Prime Markets</h3>
            <a href="/markets" class="text-xs text-blue-400 hover:text-blue-300 font-medium">View All →</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3" id="prime-markets-grid">
            <div class="text-center text-slate-500 text-sm py-4 col-span-full">Loading prime markets...</div>
        </div>
    </section>

    <!-- System Monitors - 3 Cards -->
    <section class="grid grid-cols-1 md:grid-cols-3 gap-4">

        <!-- Diagnostics -->
        <div class="rounded-lg border border-slate-800 bg-gradient-to-br from-red-950/20 to-slate-900/60 p-4 hover:border-red-700/50 transition-colors">
            <div class="flex items-start justify-between mb-3">
                <div>
                    <h3 class="text-base font-semibold text-slate-200">System Diagnostics</h3>
                    <p class="text-xs text-slate-400 mt-1">Instant problem detection</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-red-500/10 flex items-center justify-center">
                    <svg class="w-5 h-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 12l2 2 4-4"/>
                        <circle cx="12" cy="12" r="10"/>
                    </svg>
                </div>
            </div>
            <div class="grid grid-cols-2 gap-3 mb-3 text-xs">
                <div>
                    <div class="text-slate-500">Status</div>
                    <div class="text-lg font-bold text-green-400" id="diagnostics-status-preview">HEALTHY</div>
                </div>
                <div>
                    <div class="text-slate-500">Checks</div>
                    <div class="text-lg font-bold text-slate-200">5/5</div>
                </div>
            </div>
            <a href="/diagnostics" class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-red-600 hover:bg-red-500 text-white text-sm font-medium transition-colors">
                View Diagnostics
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14m-7-7l7 7-7 7"/>
                </svg>
            </a>
        </div>

        <!-- Microstructure Monitor -->
        <div class="rounded-lg border border-slate-800 bg-gradient-to-br from-blue-950/20 to-slate-900/60 p-4 hover:border-blue-700/50 transition-colors">
            <div class="flex items-start justify-between mb-3">
                <div>
                    <h3 class="text-base font-semibold text-slate-200">Microstructure Monitor</h3>
                    <p class="text-xs text-slate-400 mt-1">FAZA 3 - Real-time market data</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-blue-500/10 flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 3h18v18H3z"/>
                        <path d="M3 9h18M9 3v18"/>
                    </svg>
                </div>
            </div>
            <div class="grid grid-cols-3 gap-3 mb-3 text-xs">
                <div>
                    <div class="text-slate-500">Symbols</div>
                    <div class="text-lg font-bold text-slate-200" id="micro-symbols-preview">-</div>
                </div>
                <div>
                    <div class="text-slate-500">Events/s</div>
                    <div class="text-lg font-bold text-emerald-400" id="micro-rate-preview">-</div>
                </div>
                <div>
                    <div class="text-slate-500">Status</div>
                    <div class="text-lg font-bold text-green-400" id="micro-health-preview">OK</div>
                </div>
            </div>
            <a href="/monitor-micro" class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium transition-colors">
                Open Monitor
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14m-7-7l7 7-7 7"/>
                </svg>
            </a>
        </div>

        <!-- Feature Engine -->
        <div class="rounded-lg border border-slate-800 bg-gradient-to-br from-violet-950/20 to-slate-900/60 p-4 hover:border-violet-700/50 transition-colors">
            <div class="flex items-start justify-between mb-3">
                <div>
                    <h3 class="text-base font-semibold text-slate-200">Feature Engine</h3>
                    <p class="text-xs text-slate-400 mt-1">FAZA 4 - Advanced signal generation</p>
                </div>
                <div class="w-10 h-10 rounded-lg bg-violet-500/10 flex items-center justify-center">
                    <svg class="w-5 h-5 text-violet-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2v6m0 12v2M4.93 4.93l4.24 4.24m5.66 5.66l4.24 4.24M2 12h6m12 0h2M4.93 19.07l4.24-4.24m5.66-5.66l4.24-4.24"/>
                        <circle cx="12" cy="12" r="3"/>
                    </svg>
                </div>
            </div>
            <div class="grid grid-cols-3 gap-3 mb-3 text-xs">
                <div>
                    <div class="text-slate-500">Analyzed</div>
                    <div class="text-lg font-bold text-slate-200" id="features-symbols-preview">-</div>
                </div>
                <div>
                    <div class="text-slate-500">Updates/s</div>
                    <div class="text-lg font-bold text-emerald-400" id="features-rate-preview">-</div>
                </div>
                <div>
                    <div class="text-slate-500">Status</div>
                    <div class="text-lg font-bold text-green-400" id="features-health-preview">OK</div>
                </div>
            </div>
            <a href="/features" class="inline-flex items-center gap-2 px-4 py-2 rounded-md bg-violet-600 hover:bg-violet-500 text-white text-sm font-medium transition-colors">
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 5l7 7-7 7"/>
                </svg>
                View Details
            </a>
        </div>

    </section>

    <!-- Recent Market Activity - Last 10 Trades -->
    <section class="rounded-lg border border-slate-800 bg-slate-900/60 p-4">
        <div class="flex items-center justify-between mb-3">
            <h3 class="text-sm font-semibold text-slate-200 uppercase tracking-wide">Recent Market Activity</h3>
            <div class="text-xs text-slate-500">Last 10 trades</div>
        </div>
        <div class="border border-slate-700 rounded-lg overflow-hidden">
            <div class="max-h-64 overflow-y-auto scrollbar-thin scrollbar-track-slate-800 scrollbar-thumb-slate-600">
                <table class="w-full text-xs">
                    <thead class="sticky top-0 bg-slate-800 border-b border-slate-700">
                        <tr>
                            <th class="text-left py-2 px-3 text-slate-400 font-medium">Time</th>
                            <th class="text-left py-2 px-3 text-slate-400 font-medium">Symbol</th>
                            <th class="text-left py-2 px-3 text-slate-400 font-medium">Side</th>
                            <th class="text-right py-2 px-3 text-slate-400 font-medium">Price</th>
                            <th class="text-right py-2 px-3 text-slate-400 font-medium">Size</th>
                            <th class="text-center py-2 px-3 text-slate-400 font-medium">Flow</th>
                        </tr>
                    </thead>
                    <tbody id="recent-trades-body" class="bg-slate-900/60 divide-y divide-slate-700/50">
                        <tr>
                            <td colspan="6" class="text-center text-slate-500 py-4">Loading trades...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</div>

<!-- Dashboard API Client -->
<script type="module">
    import { DashboardAPI } from '/js/api-client.js';

    let globalDashboard = null;

    // Make refresh function globally available
    window.refreshFeatureData = function() {
        if (globalDashboard && typeof globalDashboard.updateFeatureEngineStats === 'function') {
            globalDashboard.updateFeatureEngineStats();
        }
    };

    document.addEventListener('DOMContentLoaded', () => {
        console.log('✅ Dashboard loading...');

        const dashboard = new DashboardAPI();
        globalDashboard = dashboard;

        dashboard.start();

        console.log('✅ Dashboard initialized');
    });
</script>
