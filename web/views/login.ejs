<div class="login-box" style="
    width:300px;
    margin:100px auto;
    padding:20px;
    background:#222;
    border-radius:8px;
">
    <h2>Login</h2>

    <% if (error) { %>
        <div class="error" style="color:#ff4444; margin-bottom:10px;">
            <%= error %>
        </div>
    <% } %>

    <form method="POST" action="/login">
        <input
            type="text"
            name="username"
            placeholder="Username"
            required
            style="width:100%; padding:10px; margin:8px 0;"
        />

        <input
            type="password"
            name="password"
            placeholder="Password"
            required
            style="width:100%; padding:10px; margin:8px 0;"
        />

        <button
            type="submit"
            style="width:100%; padding:10px; background:#28a745; border:none; color:white;"
        >
            Login
        </button>
    </form>
</div>
