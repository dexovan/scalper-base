<div class="min-h-screen flex items-center justify-center bg-darkbg px-4">

    <div class="w-full max-w-sm glass p-8 rounded-2xl shadow-lg border border-white/10">

        <h2 class="text-2xl font-bold text-center mb-6">Prijava u sistem</h2>

        <% if (error) { %>
        <div class="mb-4 text-red-400 text-center font-semibold">
            <%= error %>
        </div>
        <% } %>

        <form method="POST" action="/login" class="space-y-4">

            <div>
                <label class="block mb-1 text-white/70">Korisniƒçko ime</label>
                <input type="text" name="username" required
                       class="w-full px-4 py-2 rounded-lg bg-white/10 border border-white/20 focus:border-primary outline-none">
            </div>

            <div>
                <label class="block mb-1 text-white/70">Lozinka</label>
                <input type="password" name="password" required
                       class="w-full px-4 py-2 rounded-lg bg-white/10 border border-white/20 focus:border-primary outline-none">
            </div>

            <button type="submit"
                    class="w-full py-2 mt-4 bg-primary rounded-lg text-darkbg font-bold hover:opacity-90 transition">
                Prijavi se
            </button>

        </form>

    </div>
</div>
